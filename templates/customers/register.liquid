<div class="page-header page-header--account-form">
    <div class="page-header__content">
        <h1 class="page-header__title">{{ 'customer.register.title' | t }}</h1>
    </div>
</div>
<div class="page-section">
    {% form 'create_customer', class: 'form form--login' %}
        <div class="form__wrapper">
            {% if form.errors != blank %}
                <div class="form__error-message">
                    {% for error in form.errors %}
                        <div class="form__error">
                            {% if error == 'form' %}
                                {{ form.errors.messages[error] }}
                            {% else %}
                                {{ form.errors.translated_fields[error] | capitalize }} {{ form.errors.messages[error] }}
                            {% endif %}
                        </div>
                    {% endfor %}
                </div>
            {% endif %}

            <div class="form__field form__field--input">
                <label for="FirstName" class="form__label">
                    {{ 'customer.register.first_name' | t }}
                </label>
                <input type="text"
                    class="form__control form__input"
                    name="customer[first_name]"
                    id="FirstName"
                    autocomplete="given-name"
                    placeholder="{{ 'customer.register.first_name' | t }}"
                    autofocus
                    {% if form.first_name %}value="{{ form.first_name }}"{% endif %}
                    required>
            </div>
            <div class="form__field form__field--input">
                <label for="LastName" class="form__label">
                    {{ 'customer.register.last_name' | t }}
                </label>
                <input type="text"
                    class="form__control form__input"
                    name="customer[last_name]"
                    autocomplete="family-name"
                    id="LastName"
                    placeholder="{{ 'customer.register.last_name' | t }}"
                    {% if form.last_name %}value="{{ form.last_name }}"{% endif %}
                    required>
            </div>
            <div class="form__field form__field--input">
                <label for="Email" class="form__label">
                    {{ 'customer.register.email' | t }}
                </label>
                <input type="email"
                    class="form__control form__input"
                    name="customer[email]"
                    id="Email"
                    class="{% if form.errors contains 'email' %}input-error{% endif %}"
                    placeholder="{{ 'customer.register.email' | t }}"
                    value="{% if form.email %}{{ form.email }}{% endif %}"
                    spellcheck="false"
                    autocomplete="email"
                    autocapitalize="off"
                    required>
            </div>
            <div class="form__field form__field--input">
                <label for="CreatePassword" class="form__label">
                    {{ 'customer.register.password' | t }}
                </label>
                <input type="password"
                    class="form__control form__input"
                    name="customer[password]"
                    id="CreatePassword"
                    class="{% if form.errors contains 'password' %}input-error{% endif %}"
                    placeholder="{{ 'customer.register.password' | t }}"
                    required>
            </div>

            <input type="submit" value="{{ 'customer.register.submit' | t }}" class="button button--primary form__button form__submit--ajax">
            <a href="{{ shop.url }}" class="form__cancel-link">{{ 'customer.register.cancel' | t }}</a>

        </div>
    {% endform %}
</div>
