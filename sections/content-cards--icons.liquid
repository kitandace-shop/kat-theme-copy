<div class="container content-cards--icons">
    {% if section.settings.icon-block-title != blank %}
        <h2 class="content-cards__header">{{ section.settings.icon-block-title }}</h2>
    {% endif %}

    <!-- Icon Item Loop  -->
    {% if section.blocks.size > 0 %}
        <div class="css-grid css-grid--default css-grid--medium-{{ section.blocks.size }} css-grid--content-cards">
            {% for block in section.blocks %}
                <div class="css-grid__item card card--default">
                    {% if block.settings.card-image %}
                        <div class="card__image-wrapper">
                            {% render 'responsive-image' with image: block.settings.card-image, image_class: 'background-image' %}
                        </div>
                    {% endif %}

                    <div class="card__content">
                        {% if block.settings.text != blank %}
                            <p class="card__copy">{{ block.settings.text }}</p>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}

    {% if section.settings.icon-block-footer != blank %}
       <p class="content-cards__footer">{{ section.settings.icon-block-footer }}</p>
   {% endif %}
</div>

{% schema %}
{
    "name": "Content Cards - Icons",
    "tag": "section",
    "class": "page-section page-section--full-bleed page-section--content-cards page-section--no-gap",
    "settings": [
        {
            "type": "text",
            "id": "icon-block-title",
            "label": "Heading"
        },
        {
            "type": "textarea",
            "id": "icon-block-footer",
            "label": "Footer Text"
        }
    ],
    "blocks": [
        {
        "type": "card",
        "name": "Card",
        "limit": 3,
        "settings": [
            {
                "type": "image_picker",
                "id": "card-image",
                "label": "Image"
            },
            {
                "type": "richtext",
                "id": "text",
                "label": "Text"
            }
        ]
        }
    ],
    "presets": [
        {
            "name": "Content Cards - Icons",
            "category": "Components"
        }
    ]
}
{% endschema %}
