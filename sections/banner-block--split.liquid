<div class="banner-block banner-block--default banner-block--split">
    {% if section.settings.banner-block-link != blank %}
        <a href="{{ section.settings.banner-block-link }}" class="banner-block__link banner-block__split-container">
    {% else %}
        <div class="banner-block__split-container">
    {% endif %}
        <div class="background-media__content background-media__content--{{section.settings.text-orientation}}">
            {% if section.settings.banner-block-title != blank %}
                <h2 class="banner-block__title h2">{{ section.settings.banner-block-title }}</h2>
            {% endif %}

            {% if section.settings.banner-block-text != blank %}
                <div class="banner-block__content">{{ section.settings.banner-block-text }}</div>
            {% endif %}

            {% if section.settings.banner-block-button-text != blank and section.settings.banner-block-link != blank %}
                <div class="button button--primary">{{ section.settings.banner-block-button-text }}</div>
            {% endif %}
        </div>
        <div class="background-media background-media--{{section.settings.text-orientation}}">
            {% if section.settings.banner-block-image != blank %}
                <div class="background-media__background">
                    {% render 'responsive-image' with
                    image_desktop: section.settings.banner-block-image,
                    image_mobile:  section.settings.mobile-banner-block-image,
                    image_class:   "background-image",
                    lazy:          false
                    %}
                </div>
            {% endif %}
        </div>
    {% if section.settings.banner-block-link != blank %}
        </a>
    {% else %}
        </div>
    {% endif %}
</div>


{% schema %}
{
    "name": "Banner Block -- Split",
    "tag": "section",
    "class": "page-section page-section--split-block",
    "settings": [
        {
            "type": "image_picker",
            "id": "banner-block-image",
            "label": "Desktop Image"
        },
        {
            "type": "image_picker",
            "id": "mobile-banner-block-image",
            "label": "Mobile Image"
        },
        {
            "type": "text",
            "id": "banner-block-title",
            "label": "Title"
        },
        {
            "type": "textarea",
            "id": "banner-block-text",
            "label": "Text"
        },
        {
            "type": "radio",
            "id": "text-orientation",
            "options": [
                {
                    "value": "left",
                    "label": "Left"
                }, {
                    "value": "right",
                    "label": "Right"
                }
            ],
            "label": "Text Orientation",
            "info": "Text in this section can be left or right aligned on the image."
        },
        {
            "type": "text",
            "id": "banner-block-button-text",
            "label": "Button Label"
        },
        {
           "type": "url",
            "id": "banner-block-link",
            "label": "Button Link"
        }
    ]
}
{% endschema %}
