[
    {
      "name": "theme_info",
      "theme_name": "iamota Theme Foundation",
      "theme_version": "3.0.0",
      "theme_author": "iamota (iamota.com)",
      "theme_documentation_url": "https:\/\/github.com\/iamota\/trailhead",
      "theme_support_url": "https:\/\/www.iamota.com"
    },
    {
      "name": "Social media",
      "settings": [
        {
          "type": "header",
          "content": "Social sharing image"
        },
        {
          "type": "image_picker",
          "id": "share_image",
          "label": "Image",
          "info": "Shown when sharing a link on social media. [Learn more](https:\/\/help.shopify.com\/manual\/using-themes\/troubleshooting\/showing-social-media-thumbnail-images\/) about image thumbnails."
        },
        {
          "type": "header",
          "content": "Social sharing options"
        },
        {
          "type": "checkbox",
          "id": "social_sharing_blog",
          "label": "Enable sharing for blog articles",
          "default": true
        },
        {
          "type": "checkbox",
          "id": "share_facebook",
          "label": "Share on Facebook",
          "default": true
        },
        {
          "type": "checkbox",
          "id": "share_twitter",
          "label": "Tweet on Twitter",
          "default": true
        },
        {
          "type": "checkbox",
          "id": "share_pinterest",
          "label": "Pin on Pinterest",
          "default": true
        },
        {
          "type": "header",
          "content": "Sharing links"
        },
        {
          "type": "text",
          "id": "social_twitter_link",
          "label": "Twitter link"
        },
        {
          "type": "text",
          "id": "social_facebook_link",
          "label": "Facebook link"
        },
        {
          "type": "text",
          "id": "social_pinterest_link",
          "label": "Pinterest link"
        },
        {
          "type": "text",
          "id": "social_instagram_link",
          "label": "Instagram link"
        },
        {
          "type": "text",
          "id": "social_linkedin_link",
          "label": "Linkedin link"
        },
        {
          "type": "text",
          "id": "social_snapchat_link",
          "label": "Snapchat link"
        },
        {
          "type": "text",
          "id": "social_tumblr_link",
          "label": "Tumblr link"
        },
        {
          "type": "text",
          "id": "social_youtube_link",
          "label": "Youtube link"
        },
        {
          "type": "text",
          "id": "social_vimeo_link",
          "label": "Vimeo link"
        }
      ]
    },
    {
      "name": "Currency",
      "settings": [
        {
          "type": "checkbox",
          "id": "show_currency",
          "label": "Show currency"
        }
      ]
    },
    {
      "name": "Product Swatches",
      "settings": [
        {
          "type": "textarea",
          "id": "circle_swatches",
          "label": "Color variant types",
          "info": "Add a comma-separated list of variant titles that should have a background color, texture, or pattern. (colour,theme,season)"
        },
        {
          "type": "textarea",
          "id": "text_swatches",
          "label": "Text variant types",
          "info": "Add a comma-separated list of variant titles that should be displayed as a text-based swatch. (size, length)"
        },
        {
          "type": "text",
          "id": "product_card_swatch_type",
          "label": "Product Card Swatch Type",
          "info": "Add a variant title that can be added to the product card as swatch"
        }
      ]
    },
    {
      "name": "Cart",
      "settings": [
        {
          "type": "checkbox",
          "id": "cart_notes_enable",
          "label": "Enable cart notes",
          "default": true
        },
        {
          "type": "text",
          "id": "shipping_return_info_heading",
          "label": "Shipping & Return Info Heading"
        },
        {
          "type": "richtext",
          "id": "shipping_info_message",
          "label": "Shipping Info Message"
        },
        {
          "type": "richtext",
          "id": "return_info_message",
          "label": "Return Info Message"
        },
        {
          "type": "text",
          "id": "free_shipping_threshold",
          "label": "Free shipping amount",
          "info": "Amount in cents"
        }
      ]
    },
    {
      "name": "Favicon",
      "settings": [
        {
          "type": "image_picker",
          "id": "favicon",
          "label": "Favicon image",
          "info": "Will be scaled down to 32 x 32px"
        }
      ]
    },
    {
      "name": "Google Tag Manager",
      "settings": [
        {
          "type": "text",
          "id": "gtm_container_id",
          "label": "Google Tag Manager Container ID",
          "info": "(e.g. GTM-XXXXXX)"
        }
      ]
    },
    {
      "name": "Shopify Predictive Search",
      "settings": [
        {
          "type": "checkbox",
          "id": "enable_predictive_search",
          "label": "Enable Predictive Search",
          "default": false
        },
        {
          "type": "checkbox",
          "id": "disable_mobile_predictive_search",
          "label": "Disable Predictive Search on Mobile",
          "default": false
        },
        {
          "type": "range",
          "id": "search_products_limit",
          "min": 0,
          "max": 10,
          "step": 1,
          "label": "Number of Products to return",
          "info": "Max of 10 products can be returned. Products will be removed from predictive search if set to 0.",
          "default": 10
        },
        {
          "type": "range",
          "id": "search_pages_limit",
          "min": 0,
          "max": 10,
          "step": 1,
          "label": "Number of Pages to return",
          "info": "Max of 10 pages can be returned. Pages will be removed from predictive search if set to 0.",
          "default": 10
        },
        {
          "type": "range",
          "id": "search_articles_limit",
          "min": 0,
          "max": 10,
          "step": 1,
          "label": "Number of Articles to return",
          "info": "Max of 10 articles can be returned. Articles will be removed from predictive search if set to 0.",
          "default": 10
        }
      ]
    },
    {
      "name": "Gift Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "gift_card_image",
          "label": "Gift Card Image",
          "info": "Replace the default Shopify gift card image."
        }
      ]
    },
    {
      "name": "Specs Table",
      "settings": [
        {
          "type": "image_picker",
          "id": "close_icon",
          "label": "Tooltip Close icon"
        }
      ]
    },
    {
      "name": "Product Card Labels",
      "settings": [
        {
          "type": "checkbox",
          "id": "display_soldout_label",
          "label": "Display Sold Out Label",
          "default": true
        },
        {
          "type": "checkbox",
          "id": "display_sale_label",
          "label": "Display Sale Label",
          "default": true
        },
        {
          "type": "checkbox",
          "id": "display_new_label",
          "label": "Display New Label",
          "default": true
        },
        {
          "type": "range",
          "id": "new_label_period",
          "min": 1,
          "max": 30,
          "step": 1,
          "unit": "day",
          "label": "'New' Label Period",
          "default": 7,
          "info": "Number of days label is shown since the product is added\/created in the store."
        }
      ]
    }
  ]
  